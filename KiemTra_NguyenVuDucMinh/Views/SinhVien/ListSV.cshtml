@model IEnumerable<KiemTra_NguyenVuDucMinh.Models.SinhVien>

@{
    ViewBag.Title = "ListSV";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DANH SÁCH SINH VIÊN</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th> Mã sinh vien </th>
        <th> Tên sinh viên</th>
        <th> Giới tính</th>
        <th> Ngày sinh</th>
        <th> Hình </th>
        <th> Mã Ngành</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.MaSV)</td>
            <td>@Html.DisplayFor(modelItem => item.HoTen)</td>
            <td>@Html.DisplayFor(modelItem => item.GioiTinh)</td>
            <td>@Html.DisplayFor(modelItem => item.NgaySinh)</td>
            <td><img src="@item.Hinh" width="150" height="215" alt="hinh thumbnail" /></td>
            <td>@Html.DisplayFor(modelItem => item.MaNganh)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaSV }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaSV }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaSV })
            </td>
        </tr>
    }
</table>
